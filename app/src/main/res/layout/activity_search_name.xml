<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".SearchName">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_title"
        android:src="@drawable/search_recipe"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">

    </ImageView>
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/search_title"
    android:layout_marginTop="10dp"
    android:src="@drawable/no_recipe_found"
    android:id="@+id/rcp_not_found">

</ImageView>

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:layout_below="@+id/rcp_not_found"
    android:textColor="#000000"
    android:hint="Recipe name..."
    android:textSize="30dp"
    android:gravity="center"
    android:id="@+id/input">
</EditText>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/get_recipe"
        android:src="@drawable/get_recipe"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="?android:selectableItemBackground"
        android:onClick="get_json">
    </ImageButton>

</RelativeLayout>